<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">

	<view name="system">

		<image name="background" extra="true">
<!-- You can change the background image by putting another image in the following path and editing the following line. -->
			<path>./_inc/images/system.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
<!-- If you change the background image, you might want to edit the following line. Or just delete it. Or just comment it out. -->
			<color>ffffffaa</color>
		</image>

		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0.094 0.07</pos>
			<size>0.81 0.81</size>
			<color>00000000</color>
			<logoScale>1.8</logoScale>
			<maxLogoCount>3</maxLogoCount>
		</carousel>
	
		<text name="systemInfo">
			<backgroundColor>00000000</backgroundColor>
			<origin>0.5 0</origin>
			<pos>0.5 0.56</pos>
			<size>0.4 0.025</size>
			<color>808080</color>
			<fontSize>0.024</fontSize>
		</text>

		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 0.998</pos>
			<size>1 0.024</size>
			<color>000000ff</color>
		</image>

		<helpsystem name="help">
			<textColor>808080</textColor>
			<iconColor>808080</iconColor>
			<origin>0.5 1</origin>
			<pos>0.51 0.998</pos>
			<fontSize>0.024</fontSize>
		</helpsystem>

	</view>
	
	</feature>

